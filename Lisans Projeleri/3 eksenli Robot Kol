#include <SoftwareSerial.h>
#include <Servo.h>   // servo ve seri haberleÅŸme iÃ§in kÃ¼tÃ¼phaneleri tanÄ±mlÄ±yoruz.

Servo myservo1, myservo2, myservo3, myservo4; // servolarÄ±mÄ±zÄ± tanÄ±mlÄ±yoruz.

int bluetoothTx = 10;
int bluetoothRx = 11;  // Bluetooth alÄ±cÄ± vericilerini tanÄ±mlÄ±yoruz.

SoftwareSerial bluetooth(bluetoothTx, bluetoothRx);

void setup()
{
myservo1.attach(5);   // ServolarÄ±mÄ±zÄ± Arduino'nun pwm(~) Ã§Ä±kÄ±ÅŸlarÄ±na baÄŸlayalÄ±m.
myservo2.attach(6);
myservo3.attach(9);
myservo4.attach(3);
Serial.begin(9600);  
bluetooth.begin(9600);  // 9600 baud'luk bir haberleÅŸme tanÄ±mlayalÄ±m.
}

void loop()
{
if (bluetooth.available() >= 2 ) // 2 hÄ±z seviyesindeki Bluetooth sinyal alÄ±yor mu? 
{
unsigned int servopos = bluetooth.read(); 
unsigned int servopos1 = bluetooth.read(); 
unsigned int realservo = (servopos1 * 256) + servopos;  

// AlÄ±nan sinyaller kaydediliyor.
// AppInventor'da her servo iÃ§in ayrÄ± sinyal gÃ¶ndermiÅŸtik.
//Åimdi de her servo iÃ§in tanÄ±mlanan sinyalin alÄ±nÄ±p alÄ±nmadÄ±ÄŸÄ±nÄ± kontrol ediyoruz.
//realservo , UygulamamÄ±zdan gelen sinyal deÄŸerleri.
// Bu deÄŸerler her servo iÃ§in ayrÄ± ayrÄ± tekrar tanÄ±mlanÄ±yor.
// "map" komutu ile bu sinyalleri, motora vereceÄŸimiz aÃ§Ä± deÄŸerlerine Ã§eviriyoruz.
// Ã¶rnek: map(servo,alÄ±nan min.sinyal,alÄ±nan max.sinyal,min.AÃ§Ä±,max.AÃ§Ä±);

if (realservo >= 1000 && realservo <= 1135) // tut bÄ±rak
{
